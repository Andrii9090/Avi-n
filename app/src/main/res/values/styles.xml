<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/indigo_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="ButtonRemove" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/red_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="ButtonConfirm" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/teal_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="LinearLayoutReserva" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/indigo_900</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>